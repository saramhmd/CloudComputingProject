<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shape with drop shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set the background color of the shape (in this example, white) -->
            <corners android:radius="10dp" /> <!-- Set the corner radius (in this example, 10dp) -->
        </shape>
    </item>
    <!-- Drop shadow -->
    <item android:bottom="5dp" android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#CDCDCDCD" /> <!-- Set the color of the drop shadow with 50% opacity (in this example, semi-transparent black) -->
            <corners android:radius="10dp" /> <!-- Set the same corner radius as the shape -->
        </shape>
    </item>
</layer-list>


