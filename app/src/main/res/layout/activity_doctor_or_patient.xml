        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="هل تريد الدخول كطبيب او كمريض؟"
            android:textColor="#15437A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/patientButton"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:backgroundTint="#437EC7"
            app:cornerRadius="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:text="مريض" />

            <Button
                android:id="@+id/doctorButton"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:backgroundTint="#437EC7"
                app:cornerRadius="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="160dp"
                android:text="طبيب" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="230dp"
            android:text="لدي حساب, انقر لتسجيل الدخول"
            android:textColor="#7D8C9E"
            android:textSize="15sp" />



